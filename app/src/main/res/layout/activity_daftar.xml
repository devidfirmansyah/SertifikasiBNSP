<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mycashbook.LoginActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/cash_flow"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MyCashBook v1.0"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16pt"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/daftar_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="username"
        android:padding="15dp"
        android:background="@drawable/inputcustom"
        android:drawableEnd="@drawable/ic_person"
        android:ems="15"
        android:fontFamily="@font/poppinsmedium"
        android:inputType="textPhonetic"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/daftar_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:padding="15dp"
        android:background="@drawable/inputcustom"
        android:drawableEnd="@drawable/ic_pass"
        android:ems="15"
        android:fontFamily="@font/poppinsmedium"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        />
    <EditText
        android:id="@+id/daftar_ulangi_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ulangi Password"
        android:padding="15dp"
        android:background="@drawable/inputcustom"
        android:drawableEnd="@drawable/ic_pass"
        android:ems="15"
        android:fontFamily="@font/poppinsmedium"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/daftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DAFTAR"
        android:ems="15"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/daftar_kliklogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login disini!"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAccent"/>

</LinearLayout>
